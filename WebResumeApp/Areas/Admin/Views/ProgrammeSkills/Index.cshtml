@model IEnumerable<ProgrammeSkill>
@{
    ViewData["Title"] = "Index";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Bootstrap Basic Tables</h4>
                    <span>
                        lorem ipsum dolor sit amet, consectetur adipisicing
                        elit
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Bootstrap Table</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Basic Table</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="page-body">

    <div class="card">
        <div class="card-header">
            <h5>Basic Table</h5>
            <span>use class <code>table</code> inside table element</span>
        </div>
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Percentage of knowledge level</th>

                            <th class="d-flex justify-content-end"><a class="btn btn-success" asp-action="create"><i class="fa-solid fa-plus"></i></a></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Programme</td>
                                <td>@item.Percentage %</td>

                                <td class="d-flex justify-content-end">

                                    <a class="btn btn-warning ml-3 mr-3" asp-action="edit" asp-route-id="@item.Id"><i class="fa-solid fa-pencil"></i></a>
                                    <a class="btn btn-danger" onclick="removeEntity(@item.Id,'@item.Programme')"><i class="fa-solid fa-trash"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section addjs {
    <script src="~/libraries/sweetalert/sweetalert.min.js"></script>
    <script>
        function removeEntity(id, name) {
            swal({
                title: "Are you sure?",
                text: "Once deleted, you will not be able to recover this file!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        let obj = { id };
                        $.ajax({
                            url: '@Url.Action("delete")',
                            type: 'POST',
                            data: obj,
                            success: function (response) {
                                if (response.error == true) {
                                    toastr.error(response.message, "Error!");
                                    return;
                                }
                                toastr.success(response.message, "Success!")
                                setTimeout(function () {
                                    window.location.reload();
                                }, 2000)
                            },
                            error: function (response) {
                                console.warn(response)
                            }
                        });
                    }
                });
        }
    </script>
    }